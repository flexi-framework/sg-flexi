module-whatis	"Enable usage of OpenMPI FIGIVERSION with GNU compiler "
conflict openmpi

# OpenMPI variables
set          VERSION         FIGIVERSION
set          MPI_BASE        "FIGIPATH"
setenv       MPI_BASE        $MPI_BASE
setenv       MPI_INC         "-I${MPI_BASE}/include"
setenv       MPI_LIBDIR      "${MPI_BASE}/lib"
prepend-path PATH            "${MPI_BASE}/bin"
prepend-path LD_LIBRARY_PATH "${MPI_BASE}/lib"

proc ModulesHelp {} {
  puts stderr "
modulefile \"[module-info name]\"
Enable usage of OpenMPI FIGIVERSION with GNU compiler"
  return 0
}
